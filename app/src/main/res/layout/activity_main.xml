<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="Who was the 44th president of the United States?"
        android:textSize="40sp"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/paleYellow"
        android:gravity="center"
        android:text="Barack Obama"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/add_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/ic_iconmonstr_plus_circle_thin" />

    <ImageView
        android:id="@+id/next_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="353dp"
        android:layout_marginEnd="-340dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/ic_iconmonstr_arrow_28" />

</RelativeLayout>