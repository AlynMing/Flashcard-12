<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:textSize="40sp"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:elevation="30dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/paletteD"
        android:gravity="center"
        android:text="Barack Obama"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/optionA"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="320dp"
        android:background="@color/paletteA"
        android:gravity="center"
        android:text="Barack Obama"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/optionB"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="400dp"
        android:background="@color/paletteB"
        android:gravity="center"
        android:text="Donald Trump"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/optionC"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="480dp"
        android:background="@color/paletteC"
        android:gravity="center"
        android:text="George W. Bush"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/add_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/ic_iconmonstr_plus_circle_thin" />

    <ImageView
        android:id="@+id/next_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="350dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/ic_iconmonstr_arrow_28" />

</RelativeLayout>